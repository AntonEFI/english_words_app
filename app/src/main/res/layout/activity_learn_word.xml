<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"/>
    
    <TextView
        android:id="@+id/tv_given_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="GALAXY"
        android:layout_marginHorizontal="33dp"
        android:layout_marginTop="86dp"
        android:textSize="50sp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/shape_rounded_values">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/corner_round_field"
                android:textColor="@color/number_color"
                android:layout_marginStart="12dp"
                android:text="@string/one"/>

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сломать"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/ques_field_margin_betwen_field"
            android:background="@drawable/shape_rounded_values">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/corner_round_field"
                android:textColor="@color/number_color"
                android:layout_marginStart="12dp"
                android:text="@string/two"/>

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сломать"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/ques_field_margin_betwen_field"
            android:background="@drawable/shape_rounded_values">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/corner_round_field"
                android:textColor="@color/number_color"
                android:layout_marginStart="12dp"
                android:text="@string/three"/>

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сломать"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/ques_field_margin_betwen_field"
            android:background="@drawable/shape_rounded_values">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/corner_round_field"
                android:textColor="@color/number_color"
                android:layout_marginStart="12dp"
                android:text="@string/four"/>

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сломать"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>